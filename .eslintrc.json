{
    "extends": ["eslint:recommended", "eslint-config-strict-mode"],
    "rules": {
        "max-len": "off",
        "no-trailing-spaces": "error",
        "no-unused-vars": "warn",
        "no-undef": "warn",
        "require-jsdoc": ["warn", {
            "require": {
                "FunctionDeclaration": true,
                "MethodDefinition": true,
                "ClassDeclaration": true,
                "ArrowFunctionExpression": true,
                "FunctionExpression": true
            }
        }]
    },
    "globals": {
        "Global": "readonly"
    },
    "parser": "@babel/eslint-parser",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module",
        "allowImportExportEverywhere": false
    },
    "env": {
        "node": true
    }
}
